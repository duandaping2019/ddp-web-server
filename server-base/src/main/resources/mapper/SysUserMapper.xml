<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="ddp.mapper.security.SysUserMapper" >
  <resultMap id="BaseResultMap" type="ddp.ext.security.SysUserExt">
    <id column="user_id" property="userId" jdbcType="BIGINT" />
    <result column="user_no" property="userNo" jdbcType="VARCHAR" />
    <result column="user_name" property="userName" jdbcType="VARCHAR" />
    <result column="user_sex" property="userSex" jdbcType="SMALLINT" />
    <result column="login_id" property="loginId" jdbcType="VARCHAR" />
    <result column="login_pwd" property="loginPwd" jdbcType="VARCHAR" />
    <result column="user_state" property="userState" jdbcType="CHAR" />
  </resultMap>

  <sql id="BaseQuerySqlCols">
      user_id,
      user_no,
      user_name,
      user_sex,
      login_id,
      login_pwd,
      user_state
  </sql>

  <select id="findByLoginId" resultMap="BaseResultMap">
    select
        <include refid="BaseQuerySqlCols" />
    from sys_user t
    where t.login_id = #{loginId}
  </select>

</mapper>