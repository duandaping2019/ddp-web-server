<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="ddp.mapper.security.SecUserMapper" >
  <resultMap id="BaseResultMap" type="ddp.ext.security.SecUserExt">
    <id column="user_id" property="userId" jdbcType="BIGINT" />
    <result column="user_no" property="userNo" jdbcType="VARCHAR" />
    <result column="user_name" property="userName" jdbcType="VARCHAR" />
    <result column="user_sex" property="userSex" jdbcType="SMALLINT" />
  </resultMap>

  <select id="selectByExt" resultMap="BaseResultMap">
    select *
    from sys_user
    where 1=1
    <if test="userNo !=null and userNo !=''">
      and user_no like concat('%',#{userNo},'%')
    </if>

  </select>
</mapper>